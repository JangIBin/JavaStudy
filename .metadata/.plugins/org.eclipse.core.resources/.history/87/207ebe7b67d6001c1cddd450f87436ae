package com.ex03;

public class CircleEx {

	public static void main(String[] args) {

		Circle pizza; // 레퍼런스 변수선언
		
		pizza = new Circle();
		
		pizza.radius = 10; // 피자의 반지름을 10으로 설정
		pizza.name = "자바피자";
		
		// 피자크기 구하기(면적)
		double area = pizza.getArea();
		System.out.println(pizza.name+"의 면적은 "+area);
		
	}

}
