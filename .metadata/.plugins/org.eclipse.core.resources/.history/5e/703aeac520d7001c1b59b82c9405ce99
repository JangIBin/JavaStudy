package classexam;

import java.io.*;

public class ClassExam {
	
	private int x;
	private int y;
	private BufferedReader br;
	
	public ClassExam() {
		br = new BufferedReader(new InputStreamReader(System.in));
		x = 0;
		y = 0;
		
	}
	
	public void setX() throws IOException {
		
		System.out.print("x : ");
		x = Integer.parseInt(br.readLine());
		
	}
	
	public void setY() {
		System.out.print("y : ");
		y = Integer.parseInt(br.readLine());
	}

}
